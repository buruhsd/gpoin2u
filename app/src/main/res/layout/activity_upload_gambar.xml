<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_gambar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tuberpraka.gpoin.UploadGambarActivity"
    android:background="@drawable/aa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="@drawable/panel_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/cp"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="Payment Methods"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:textSize="18sp"
            android:textColor="@android:color/background_light" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/linpkt"
            android:background="@drawable/input_background"
            android:padding="8dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/metode_member"
           />
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="Bank Acc"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"
            android:textSize="18sp"
            android:textColor="@android:color/background_light" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/lincab"
            android:background="@drawable/input_background"
            android:padding="8dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bank_member"
           />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Acc Number"
            android:ems="10"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:id="@+id/txtnorek"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Acc Name"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:ems="10"
            android:id="@+id/txtatasnama"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="poin"
            android:layout_marginTop="5dp"
            android:paddingTop="2dp"
            android:id="@+id/id_poin"
            android:paddingBottom="2dp"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_dark" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Transfer Nominal"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:ems="10"
            android:id="@+id/jml_tf"
            android:paddingTop="10dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Transfer Date"
            android:ems="10"
            android:id="@+id/txttgl"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Trx Password"
            android:ems="10"
            android:id="@+id/txtpass"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:layout_marginTop="10dp" />
        <EditText
            android:id="@+id/txtket"
            android:hint="Description"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Send"
            android:layout_marginTop="10dp"
            android:id="@+id/btnkirim"
            android:textColor="@android:color/background_light" />
</LinearLayout>
    </ScrollView>

</RelativeLayout>
