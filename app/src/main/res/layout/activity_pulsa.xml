<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pulsa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tuberpraka.gpoin.PulsaActivity"
  >

    <LinearLayout
        android:id="@+id/layout_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/lnn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/nohp"
        android:hint="Phone Number"
        android:background="@drawable/bayangan"
        android:padding="8dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgprov"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/linpkt"
            android:background="@drawable/bayangan"
            android:padding="8dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinpaket"
                android:spinnerMode="dialog"
                android:dropDownWidth="match_parent" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/poinpulsa"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/bayangan"
            android:padding="8dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/trxpass"
            android:hint="Trx Password"
            android:background="@drawable/bayangan"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            tools:inputType="textPassword"
            android:inputType="textPassword" />
        <Button
            android:text="PAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnbeli"
            android:background="@drawable/button_background"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />



    </LinearLayout>

        <TextView
            android:text="Pulsa Pra Bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submenutitle"
            android:textSize="14sp"
            android:layout_weight="0.53"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/lnn1"
        android:background="@drawable/bayangan"
        android:layout_below="@+id/submenutitle"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img1"
            android:background="@drawable/ps" />
        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/id_username"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/img1"/>

        <TextView
            android:text="Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/id_username"
            android:id="@+id/nama"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:textSize="14sp" />

        <TextView
            android:text="Poin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/id_username"
            android:id="@+id/menupoin"
            android:textColor="@color/colorPrimaryRed"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:gravity="right|center"
            android:foregroundGravity="center"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/nama" />
    </RelativeLayout>


</RelativeLayout>
