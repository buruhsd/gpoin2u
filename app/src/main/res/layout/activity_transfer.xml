<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tuberpraka.gpoin.TransferActivity"
    android:orientation="vertical">


        <TextView
            android:text="TRANSFER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submenutitle"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/lnn1"
        android:layout_below="@+id/id_news"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bayangan"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img1"
            android:background="@drawable/ps" />
        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/id_username"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/img1"/>

        <TextView
            android:text="Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/id_username"
            android:id="@+id/nama"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:textSize="14sp" />

        <TextView
            android:text="Poin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/id_username"
            android:id="@+id/menupoin"
            android:textColor="@color/colorPrimaryRed"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:textStyle="normal|bold"
            android:layout_marginTop="5dp"
            android:gravity="right|center"
            android:foregroundGravity="center"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/nama" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/ln3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <EditText
        android:hint="Point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtpointf"
        android:ems="10"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bayangan"
        android:inputType="number|numberDecimal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txttfuser"
        android:hint="Username"
        android:padding="10dp"
        android:background="@drawable/bayangan"
        android:layout_marginTop="10dp"
        android:inputType="text" />

        <Button
            android:text="Scan Barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/button_background"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txttrxpasstf"
        android:inputType="text|textPassword"
        android:hint="Trx Password"
        android:background="@drawable/bayangan"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tfbtn"
        android:background="@drawable/button_background"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white" />
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtpersen"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDarkRed" />

</LinearLayout>




</LinearLayout>
